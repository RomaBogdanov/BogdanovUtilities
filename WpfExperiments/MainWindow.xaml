<Window x:Class="WpfExperiments.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfExperiments"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        MouseDown="Window_MouseDown" MouseUp="Window_MouseUp"
        DragEnter="Window_DragEnter" Drop="Window_Drop" AllowDrop="True">

    <Grid AllowDrop="True">
        <TextBox 
            HorizontalAlignment="Left" 
            Height="115" 
            Margin="10,10,0,0" 
            TextWrapping="Wrap" 
            Text="TextBox" 
            AllowDrop="True"
            Drop="TextBox_Drop"
            DragEnter="TextBox_DragEnter"
            PreviewDragOver="TextBox_PreviewDragOver"
            VerticalAlignment="Top" Width="400"
            PreviewDragEnter="TextBox_PreviewDragEnter"
            PreviewDrop="TextBox_PreviewDrop"
            AcceptsReturn="True"
            />
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400">
            <sys:String>LALALA</sys:String>
        </TextBox>
    </Grid>
</Window>
