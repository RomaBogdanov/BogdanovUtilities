<Window x:Class="BogdanovCodeAnalyzer.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BogdanovCodeAnalyzer"
        xmlns:vm="clr-namespace:BogdanovCodeAnalyzer.ViewModel"
        mc:Ignorable="d"
        Title="Анализатор кода" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>

        <Button Content="{Binding TaskToOpenOrCloseServer, Mode=TwoWay}" Command="{Binding StartStopServerCommand}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="202"/>
        <ListBox HorizontalAlignment="Left" Height="374" Margin="10,35,0,0" VerticalAlignment="Top" Width="385"
                 ItemsSource="{Binding Messages}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Text="{Binding Tag}"/>
                        <TextBox Text="{Binding LogMessage}"/>
                        <TextBox Text="{Binding Method}"/>
                        <TextBox Text="{Binding File}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Command="{Binding CreateLogsInCodeCommand}" Content="Обложить код логами" HorizontalAlignment="Left" Margin="542,67,0,0" VerticalAlignment="Top" Width="240"/>
        <TextBox Text="{Binding PathToAnalyzeFiles, Mode=TwoWay}" HorizontalAlignment="Left" Height="23" Margin="447,3,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="335"/>
        <Label Content="Путь к файлам:" HorizontalAlignment="Left" Margin="349,0,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="442,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="305" Width="319"
                   Text="{Binding TextInTextBlock, Mode=TwoWay}"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="601,31,0,0" TextWrapping="Wrap" Text="{Binding TextAddedNamespase, Mode=TwoWay}" VerticalAlignment="Top" Width="181"/>
        <Label Content="Добавляемое пространство имён" HorizontalAlignment="Left" Margin="400,28,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
